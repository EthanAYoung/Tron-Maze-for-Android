<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".WinningActivity"
    tools:showIn="@layout/activity_winning">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="467dp"
        android:layout_height="698dp"
        android:src="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/youwin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backButt2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="16dp"
        android:onClick="returnToTitle"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="270dp"
        android:layout_height="77dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="424dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/youWinText"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:text="YOU WIN"
        app:layout_constraintEnd_toStartOf="@+id/pathLenText"
        app:layout_constraintTop_toBottomOf="@+id/backButt2" />

    <TextView
        android:id="@+id/pathLenText"
        android:layout_width="166dp"
        android:layout_height="34dp"
        android:layout_marginEnd="68dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/engConsText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/shortPathLenText"
        android:layout_width="208dp"
        android:layout_height="51dp"
        android:layout_marginBottom="416dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/engConsText" />

    <TextView
        android:id="@+id/engConsText"
        android:layout_width="108dp"
        android:layout_height="51dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="416dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>