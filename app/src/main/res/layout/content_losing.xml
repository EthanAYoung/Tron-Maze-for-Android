<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LosingActivity"
    tools:showIn="@layout/activity_losing">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="292dp"
        android:layout_height="290dp"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="8dp"
        android:src="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/pathLenText"
        app:layout_constraintStart_toStartOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="272dp"
        android:layout_height="440dp"
        android:layout_marginStart="69dp"
        android:src="@drawable/youlose"
        app:layout_constraintBottom_toTopOf="@+id/shortPathLenText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pathLenText"
        android:layout_width="134dp"
        android:layout_height="51dp"
        android:layout_marginStart="69dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/shortPathLenText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/shortPathLenText"
        android:layout_width="132dp"
        android:layout_height="51dp"
        android:layout_marginStart="71dp"
        android:layout_marginBottom="60dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/engConsText"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/stopReason"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backButt4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="162dp"
        android:onClick="returnToTitle"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/youLoseText"
        android:layout_width="85dp"
        android:layout_height="39dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="31dp"
        android:text="YOU LOSE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButt4" />

    <TextView
        android:id="@+id/stopReason"
        android:layout_width="126dp"
        android:layout_height="61dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:text="newText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>